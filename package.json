{
  "name": "vscode-http-client",
  "displayName": "vscode-http-client",
  "description": "Execute HTTP requests directly in Visual Studio Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "http",
        "filenames": [
          "*.http"
        ],
        "filenamePatterns": [
          "*.http"
        ],
        "aliases": [
          "HTTP",
          "http"
        ]
      },
      {
        "id": "rest",
        "filenames": [
          "*.rest"
        ],
        "aliases": [
          "REST",
          "rest"
        ]
      }
    ],
    "grammars": [
      {
        "language": "http",
        "scopeName": "source.http",
        "path": "./syntaxes/http.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "http-client.sendRequest",
        "title": "HTTP Client: Send Request"
      },
      {
        "command": "http-client.cancelRequest",
        "title": "HTTP Client: Cancel Request"
      },
      {
        "command": "http-client.copyAsCurl",
        "title": "HTTP Client: Copy as cURL"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "http-client.sendRequest",
          "when": "resourceLangId == http",
          "group": "1_modification"
        }
      ]
    }
  },
  "activationEvents": [
    "onLanguage:http",
    "onLanguage:rest"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile:prod",
    "compile": "tsc -p ./",
    "compile:prod": "webpack --mode production",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix && prettier --write src",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "pretest": "npm run compile",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/form-data": "^2.2.1",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.20",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "dotenv": "^16.6.1",
    "form-data": "^4.0.4"
  }
}
